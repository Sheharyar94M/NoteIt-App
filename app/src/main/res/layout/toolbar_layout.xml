<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:visibility="gone"
    android:gravity="center"
    android:background="@drawable/toolbar_background"
    android:clickable="true"
    android:focusable="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginHorizontal="8dp"
            android:foreground="@drawable/transparent_ripple_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/layout"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/move_to_folder_button_action"
            app:layout_constraintStart_toEndOf="@+id/back_button"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/pin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/unpin_icon"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/transparent_ripple_background"
                android:layout_marginEnd="5dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reminder_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/reminder_icon_"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/transparent_ripple_background"
                android:layout_marginEnd="5dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/archive_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/archive_icon_white"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/transparent_ripple_background"
                android:layout_marginEnd="5dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/color_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/color_select_icon"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/transparent_ripple_background"
                android:layout_marginEnd="5dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/label_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bookmark_icon"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/transparent_ripple_background"
                android:layout_marginEnd="5dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/lock_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lock"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/transparent_ripple_background"
                android:layout_marginEnd="5dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/undo_redo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                app:layout_constraintStart_toEndOf="@+id/color_keyboard_view_button"
                app:layout_constraintTop_toTopOf="@+id/color_keyboard_view_button"
                app:layout_constraintBottom_toBottomOf="@+id/color_keyboard_view_button"
                app:layout_constraintEnd_toStartOf="@+id/format_keyboard_view_button">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/undo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/undo"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/transparent_ripple_background"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/redo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/redo"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/transparent_ripple_background"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_dots_icon"
                android:padding="8dp"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/transparent_ripple_background" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/restore_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/restore_icon"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/transparent_ripple_background"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/move_to_folder_button_action"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/delete_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_icon_"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/transparent_ripple_background"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/move_to_folder_button_action"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/move_to_folder_button_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tick_button_white"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/transparent_ripple_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>