<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="playaxis.appinn.note_it.main.fragment_home.fragments.folder.FolderListFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_folder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/add_icon_white"
        android:fontFamily="@font/poppins_regular"
        android:drawablePadding="10dp"
        android:padding="5dp"
        android:text="@string/create_new_folder"
        android:textAllCaps="false"
        android:textColor="@color/dialog_text_color"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="15dp"
        android:foreground="@drawable/transparent_ripple_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/folder_list"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/folder_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:itemCount="10"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_folder_button"
        tools:listitem="@layout/folder_list_item_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>